<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qrcodeapp.Absent">

    <TextView
        android:id="@+id/titre"
        android:text="Liste des absents"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/enregistrer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">
        <TextView
            android:id="@+id/Aff"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="spread"

            android:layout_marginStart="20dp"

            app:layout_constraintBottom_toBottomOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scrollView"

            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5"
            />

    </ScrollView>
    <Button
        android:id="@+id/enregistrer"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#469EB8"
        android:text="Enregistrer"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/rescanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/rescanner"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#469EB8"
        android:text="Retour"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>
